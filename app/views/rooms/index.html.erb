<h1>聊天室列表</h1>

<table>
  <thead>
    <tr>
      <th>名称</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td>-----<%= link_to "进入", room %></td>
        <td>｜<%= link_to "修改", edit_room_path(room) %></td>
        <td>｜<%= link_to "移除", room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

